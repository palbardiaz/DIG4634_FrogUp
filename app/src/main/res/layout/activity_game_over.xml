<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31F9E8B9"
    tools:context=".GameOverActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="480dp"
        android:elevation="2dp"
        android:fontFamily="@font/pt_sans_narrow_bold"
        android:text="GAME OVER"
        android:textAllCaps="true"
        android:textColor="#070707"
        android:textSize="170px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:capitalize="characters"
        android:fontFamily="@font/pt_sans_narrow_bold"
        android:text="SCORE"
        android:textColor="#070707"
        android:textSize="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button8"
        android:layout_width="400px"
        android:layout_height="150px"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_rounded"
        android:onClick="onPlayAgain"
        android:text="Play Again"
        android:textColor="#FFFFFF"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreView" />

    <Button
        android:id="@+id/button9"
        android:layout_width="400px"
        android:layout_height="150px"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_rounded"
        android:onClick="returnToMenu"
        android:text="Main Menu"
        android:textColor="#FFFFFF"
        android:textSize="50px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <ImageView
        android:id="@+id/froggo"
        android:layout_width="166dp"
        android:layout_height="172dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/froggo_laying" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="445dp"
        android:layout_height="759dp"
        android:elevation="-2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_img" />
</androidx.constraintlayout.widget.ConstraintLayout>