<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEABA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button10"
        android:layout_width="450px"
        android:layout_height="200px"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/pt_sans_narrow_bold"
        android:onClick="onStartClicked"
        android:text="START"
        android:textColor="#FFFFFF"
        android:textSize="120px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/pt_sans_narrow_bold"
        android:letterSpacing="0.0"
        android:text="Frog up!"
        android:textAllCaps="true"
        android:textColor="#0B0A0A"
        android:textScaleX="1"
        android:textSize="200px"
        android:textStyle="bold"
        android:translationZ="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="214dp"
        android:layout_height="161dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/froggie" />

    <ImageButton
        android:id="@+id/trophy"
        android:layout_width="36dp"
        android:layout_height="45dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/transparent"
        android:onClick="onLeaderboardClicked"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/trophy3" />

    <ImageButton
        android:id="@+id/music"
        android:layout_width="74dp"
        android:layout_height="42dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="80dp"
        android:background="@android:color/transparent"
        android:onClick="onMusicClicked"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/music_on" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:onClick="onSettingsClicked"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon" />

</androidx.constraintlayout.widget.ConstraintLayout>